<%= render "user/header" %>
<main>
  <div class="container-fluid">
    <div class="middle-box">
      <div class="row">
        <%= render "user/links" %>
        <div class="col-md-9 col-12 col-sm-9">
          <div class="tab-content">
            <div class="tab-pane fade show active text-center identity" id="identity-next" role="tabpanel">
              <h2 class="login-title">Identity</h2>
              <h3>Verify your identity</h3>
              <h5>select the type of document you would like to upload</h5>
              <br>
              <div class="row passport">
                <div class="col-md-4">
                  <%= link_to "", next_wizard_path, class: "fa fa-id-card-o" %>
                  <h6>Passport</h6>
                </div>  
                <div class="col-md-4">
                  <%= link_to "", next_wizard_path, class: "fa fa-id-card-o" %>
                  <h6>Identity Card</h6>
                </div>
                <div class="col-md-4">
                  <%= link_to "", next_wizard_path, class: "fa fa-id-card-o" %>
                  <h6>Driving License</h6>
                </div> 
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%= render "user/message_box" %>
    <a href="JavaScript:void(0);" class="help-btn"><i class="fa fa-question-circle-o"></i> HELP</a>
  </div>  
</main>