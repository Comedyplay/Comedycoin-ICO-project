<%= render "header" %>
<main>
  <div class="container-fluid">
    <div class="middle-box">
      <div class="row">
        <%= render "links" %>
        <div class="col-md-9 col-12 col-sm-9">
          <div class="tab-content">
            <div class="tab-pane fade show active" id="agreements" role="tabpanel">
              <h2 class="login-title">Agreements</h2>
              <%= form_for @user, url: wizard_path, method: :put do |f| %>
                <%= f.hidden_field :user_id, name: 'validate_user[user_id]', value: @user.id %>
                <div class="checkbox">
                  <label>
                    <input type="checkbox" name="validate_user[aggrement_verified]" value="true" id="aggrement_checkbox" required>
                    <span></span>
                  </label>
                  I have read and agree with Comedy play <a href="/documents/Terms and  Conditions_ComedyCoin.pdf", target="_blank">Term and Conditions</a>
                </div>
                <%= f.submit "i agree with these statements", class: "gray-btn btn pull-right", id: "aggrement_button" %>
              <% end %>
            </div>
          </div>
        </div>
      </div> 
    </div>
    <%= render "message_box" %>
    <a href="JavaScript:void(0);" class="help-btn pull-right"><i class="fa fa-question-circle-o"></i> HELP</a>
  </div>  
</main>
