<div class="message-box pull-right">
  <h4 class="text-center">Leave us a message</h4>
  <%= form_for @user, url: send_email_path, html: { id: "message_box_form"} do |f| %>
    <div class="form-group">
      <label>Your name</label>
      <input type="text" class="form-control" name="help[name]" required>
    </div>
    <div class="form-group">
      <label>Email address*</label>
      <input type="email" class="form-control" name="help[email]" required>
    </div>
    <div class="form-group">
      <label>How can we help you?*</label>
      <textarea rows="3" class="form-control" name="help[description]" required></textarea>
    </div>
    <div class="form-group">
      <label>Attachments</label>
      <label class="attachment">
        <i class="fa fa-paperclip"></i> Add file or drop here
        <img id="myImg" src="#" alt="your image" class="fade" height=100 width=100>
        <%= f.file_field :image, name: 'help[image]', id: "image-preview" %>
      </label>
    </div>
    <div class="form-group text-right">
      <button id="cancel-btn" type="button" class="btn gray-btn">Cancel</button>
      <button id="send-btn" type="submit" class="btn gray-btn">Send</button>
    </div>
  <% end %>
</div>
<div class="clearfix"></div>
