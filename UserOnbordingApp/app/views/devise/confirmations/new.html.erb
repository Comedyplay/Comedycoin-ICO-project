<div class="login-container">
      <div class="login-inner">
        <div class="row login-header">
        <% flash.each do |key, value| %>
          <div class="alert alert-<%= key %>"><%= value %></div>
        <% end %>
        <div class="col-md-10 col-sm-10 col-9">
          <h2 class="login-title">Resend email</h2>
        </div>
        <div class="col-md-2 col-sm-2 col-3 text-right">
          <%= image_tag asset_path('logo.png')%>
        </div>  
        </div>
        <div class="account-form">
          <%= form_for(resource, as: resource_name, url: resend_email_path(resource_name), html: { method: :post }) do |f| %>
            <div class="form-group">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'text-field form-control'  %>
              <label>
                <span>Email</span>
              </label>
            </div>
            <div class="form-group">
              <%= f.submit "Resend email", class: 'btn create-btn' %>
            </div>
          <% end %>
        </div>
        <div class="login-footer text-right">
          <h6>powered by</h6> 
          <%= image_tag asset_path('logo.png')%>
        </div>        
      </div>
      <%= render "user/message_box" %>
      <a href="JavaScript:void(0);" class="help-btn"><i class="fa fa-question-circle-o"></i> HELP</a>
    </div>  

<%= render "devise/shared/links" %>




