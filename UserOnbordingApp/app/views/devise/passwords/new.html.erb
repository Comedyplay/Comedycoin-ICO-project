<div class="login-container">
      <div class="login-inner">
        <div class="row login-header">
        <div class="col-md-10 col-sm-10 col-9">
          <h2 class="login-title">account activation</h2>
        </div>
        <div class="col-md-2 col-sm-2 col-3 text-right">
          <%= image_tag asset_path('logo.png')%>
        </div>  
        </div>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'text-field form-control'  %>
            <label>
              <span>Email</span>
            </label>
          </div>
          <div class="form-group">
            <%= f.submit "Send", class: 'btn create-btn' %>
          </div>
          <div class="form-group text-right">
          	<%= link_to 'Sign Up', new_user_registration_path, class: 'btn gray-btn'%>
          	<%#= button_to 'Sign Up',new_user_registration_path, class: 'btn gray-btn'%>
          </div>
        <% end %>
        <div class="login-footer text-right">
          <h6>powered by</h6> 
          <%= image_tag asset_path('logo.png')%>
        </div>        
      </div>
      <div class="message-box">
        <h4 class="text-center">Leave us a message</h4>
        <form class="help-form">
          <div class="form-group">
            <label>Your name</label>
            <input type="text" class="form-control">
          </div>
          <div class="form-group">
            <label>Email address*</label>
            <input type="email" class="form-control">
          </div>
          <div class="form-group">
            <label>How can we help you?*</label>
            <textarea rows="3" class="form-control"></textarea>
          </div>
          <div class="form-group">
            <label>Attachments</label>
            <label class="attachment">
              <i class="fa fa-paperclip"></i> Add file or drop here
              <input type="file">
            </label>
          </div>
          <div class="form-group text-right">
            <button id="cancel-btn" type="button" class="btn gray-btn">Cancel</button>
            <button id="send-btn" type="submit" class="btn gray-btn">Send</button>
          </div>
        </form>
      </div>
      <a href="JavaScript:void(0);" class="help-btn"><i class="fa fa-question-circle-o"></i> HELP</a>
    </div>  

<%#= render "devise/shared/links" %>
